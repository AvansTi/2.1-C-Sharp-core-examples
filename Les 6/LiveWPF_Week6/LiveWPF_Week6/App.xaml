<Application x:Class="LiveWPF_Week6.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LiveWPF_Week6"
             xmlns:viewModels="clr-namespace:LiveWPF_Week6.ViewModels"
             xmlns:views="clr-namespace:LiveWPF_Week6.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:ItemListViewModel}">
            <views:ItemListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ItemDetailViewModel}">
            <views:ItemDetailView />
        </DataTemplate>
    </Application.Resources>
</Application>
